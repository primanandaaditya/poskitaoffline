<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/colorRed">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:src="@drawable/ic_baseline_arrow_back_24px"
            android:layout_marginStart="@dimen/dimen_10"
            android:tint="@color/colorWhite"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            tools:ignore="contentDescription"/>

        <TextView
            android:id="@+id/tv_nav_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_16"
            android:layout_marginStart="@dimen/dimen_10"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/remark_detail_report"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_content"
        android:layout_below="@+id/rl_toolbar"
        android:layout_above="@+id/rl_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittext_border_black">
                <RelativeLayout
                    android:id="@+id/rl_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/colorRed">
                    <TextView
                        android:id="@+id/tv_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_centerVertical="true"
                        android:text="@string/remark_transactions_detail_orders"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_view_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        shimmer:duration="800">

                        <!-- Adding 3 rows of placeholders -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/placeholder_items" />
                            <include layout="@layout/placeholder_items" />
                            <include layout="@layout/placeholder_items" />
                            <include layout="@layout/placeholder_items" />
                            <include layout="@layout/placeholder_items" />
                            <include layout="@layout/placeholder_items" />
                            <include layout="@layout/placeholder_items" />
                            <include layout="@layout/placeholder_items" />
                            <include layout="@layout/placeholder_items" />


                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_items"
                        android:layout_below="@+id/shimmer_view_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_information"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/colorRed">
                    <TextView
                        android:id="@+id/tv_remark_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_centerVertical="true"
                        android:text="@string/remark_information"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_information_data_wholesale"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5">
                    <LinearLayout
                        android:id="@+id/ll_data_top_wholesale"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/iv_invoice_wholesale"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:src="@drawable/ic_invoice"
                                android:tint="@color/colorGrey"
                                android:layout_marginStart="@dimen/dimen_10"/>
                            <TextView
                                android:id="@+id/tv_invoice_wholesale"
                                android:layout_toEndOf="@+id/iv_invoice_wholesale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/text_12"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_5" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/iv_date_wholesale"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:src="@drawable/ic_calendar"
                                android:tint="@color/colorGrey"
                                android:layout_marginStart="@dimen/dimen_10"/>
                            <TextView
                                android:id="@+id/tv_date_wholesale"
                                android:layout_toEndOf="@+id/iv_date_wholesale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/text_12"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_5" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_data_mid_wholesale"
                        android:layout_below="@+id/ll_data_top_wholesale"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/iv_user_wholesale"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:src="@drawable/ic_user_account_box"
                                android:tint="@color/colorGrey"
                                android:layout_marginStart="@dimen/dimen_10"/>
                            <TextView
                                android:id="@+id/tv_user_wholesale"
                                android:layout_toEndOf="@+id/iv_user_wholesale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/text_12"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_5" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/iv_payment_wholesale"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:src="@drawable/ic_wallet"
                                android:tint="@color/colorGrey"
                                android:layout_marginStart="@dimen/dimen_10"/>
                            <TextView
                                android:id="@+id/tv_payment_wholesale"
                                android:layout_toEndOf="@+id/iv_payment_wholesale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/text_12"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_5" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_information_data"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5">
                    <LinearLayout
                        android:id="@+id/ll_data_top"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/iv_invoice"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:src="@drawable/ic_invoice"
                                android:tint="@color/colorGrey"
                                android:layout_marginStart="@dimen/dimen_10"/>
                            <TextView
                                android:id="@+id/tv_invoice"
                                android:layout_toEndOf="@+id/iv_invoice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/text_12"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_5" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/iv_date"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:src="@drawable/ic_calendar"
                                android:tint="@color/colorGrey"
                                android:layout_marginStart="@dimen/dimen_10"/>
                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_toEndOf="@+id/iv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/text_12"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_5" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_data_mid"
                        android:layout_below="@+id/ll_data_top"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/iv_payment"
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:src="@drawable/ic_wallet"
                                android:tint="@color/colorGrey"
                                android:layout_marginStart="@dimen/dimen_10"/>
                            <TextView
                                android:id="@+id/tv_payment"
                                android:layout_toEndOf="@+id/iv_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/text_12"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_5" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_5"
                    android:visibility="gone"
                    android:background="@color/colorBg">
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_detail_data"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">
                    <TextView
                        android:id="@+id/tv_remark_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGreyText"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:text="@string/remark_payment_subtotal"/>
                    <TextView
                        android:id="@+id/tv_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:textColor="@color/colorGreyText"
                        android:textSize="@dimen/text_12"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:text=""/>
                    <View
                        android:id="@+id/divider_subtotal"
                        android:layout_below="@+id/tv_remark_subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="@color/colorBg" />

                    <TextView
                        android:id="@+id/tv_remark_total"
                        android:layout_below="@+id/divider_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:textSize="@dimen/text_16"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:text="@string/remark_payment_subtotal"/>
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_below="@+id/divider_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_16"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:text=""/>

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_close"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/colorRed"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_back"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remark_button_back"
            android:textAllCaps="true"
            android:textSize="@dimen/text_16"
            android:textColor="@color/colorWhite"
            style="@style/dialog_red_button"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>