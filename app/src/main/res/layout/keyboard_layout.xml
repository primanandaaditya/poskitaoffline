<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:stretchColumns="*"
    tools:background="@color/colorRed">

    <TableRow>

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="2"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="3"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="4"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="5"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="6"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="7"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="8"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="9"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:padding="@dimen/dimen_16"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_backspace"
            android:layout_width="wrap_content"
            android:layout_height="28sp"
            android:layout_gravity="center"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_backspace_white"
            android:onClick="onKeyboardClick"
            android:padding="@dimen/dimen_16"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold" />
    </TableRow>
</TableLayout>
