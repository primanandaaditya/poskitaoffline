<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="@dimen/dimen_280"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5">
        <ImageView
            android:id="@+id/iv_delete_shortcut"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:src="@drawable/ic_delete"
            android:tint="@color/colorRed"
            android:layout_marginBottom="-25dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_gravity="end"/>
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dimen_10"
                tools:ignore="contentDescription"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_items"
                android:layout_below="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_14"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_below="@+id/tv_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_12"
                android:text="@string/app_name"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv_qty"
                android:layout_below="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/text_12"
                android:text="@string/qty_penjualan"
                android:layout_centerHorizontal="true"
                />
            <NumberPicker
                android:id="@+id/np_qty"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_qty"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:solidColor="@color/white"
                android:descendantFocusability="blocksDescendants"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/dialog_gray_button"
            android:background="@drawable/gray_button_background"
            android:textAllCaps="true"
            android:layout_marginEnd="@dimen/dimen_15"/>
        <Button
            android:id="@+id/btn_add"
            style="@style/dialog_red_button"
            android:textAllCaps="true"/>
    </LinearLayout>
</LinearLayout>