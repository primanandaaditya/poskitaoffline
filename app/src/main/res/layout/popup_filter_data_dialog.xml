<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading"
    android:layout_width="@dimen/alert_width"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_18"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_10"
        android:text="@string/remark_app_filter_riwayat_header"
        android:textAllCaps="true"/>

    <LinearLayout
        android:id="@+id/layout_search_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5">
        <RelativeLayout
            android:id="@+id/layoutPeriode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5">
            <TextView
                android:id="@+id/tv_periode"
                android:layout_width="@dimen/dimen_75"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/dimen_5"
                android:layout_centerVertical="true"
                android:text="@string/remark_app_filter_riwayat_tanggal"
                android:textSize="@dimen/text_10"/>
            <LinearLayout
                android:layout_toEndOf="@+id/tv_periode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText android:id="@+id/et_periode_awal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_weight="1"
                    android:padding="@dimen/dimen_5"
                    android:textColor="@color/colorBlack"
                    android:hint="@string/remark_app_filter_riwayat_tanggal"
                    android:focusable="false"
                    android:inputType="text"
                    android:textSize="@dimen/text_11"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/vectorpaint"
                    android:background="@drawable/edittext_border_black"
                    android:textColorHint="@color/grey"
                    android:layout_marginEnd="@dimen/dimen_10"
                    />
                <EditText android:id="@+id/et_periode_akhir"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_weight="1"
                    android:padding="@dimen/dimen_5"
                    android:textColor="@color/colorBlack"
                    android:hint="@string/remark_app_filter_riwayat_tanggal"
                    android:focusable="false"
                    android:inputType="text"
                    android:textSize="@dimen/text_11"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/vectorpaint"
                    android:background="@drawable/edittext_border_black"
                    android:textColorHint="@color/grey"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancel"
            style="@style/dialog_gray_button"
            android:background="@drawable/gray_button_background"
            android:text="@string/remark_items_finish_cancel"
            android:textAllCaps="true"
            android:layout_marginEnd="@dimen/dimen_15"/>
        <Button
            android:id="@+id/btnFilter"
            style="@style/dialog_red_button"
            android:text="@string/remark_items_button"
            android:textAllCaps="true"/>
    </LinearLayout>
</LinearLayout>