<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/colorRed">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:src="@drawable/ic_baseline_arrow_back_24px"
            android:layout_marginStart="@dimen/dimen_10"
            android:tint="@color/colorWhite"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            tools:ignore="contentDescription"/>

        <TextView
            android:id="@+id/tv_nav_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_16"
            android:layout_marginStart="@dimen/dimen_10"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/remark_payment"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_content"
        android:layout_below="@+id/rl_toolbar"
        android:layout_above="@+id/rl_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittext_border_black">
                <RelativeLayout
                    android:id="@+id/rl_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/colorRed">
                    <TextView
                        android:id="@+id/tv_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_centerVertical="true"
                        android:text="@string/remark_transactions_detail_orders"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_items"
                        android:layout_below="@+id/shimmer_view_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_payment"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/colorRed">
                    <TextView
                        android:id="@+id/tv_remark_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_centerVertical="true"
                        android:text="@string/remark_payment_choose"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_payment_data"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioGroup
                        android:id="@+id/rb_group"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rb_cash"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50"
                            android:background="@color/colorWhite"
                            android:text="@string/remark_payment_cash"
                            android:checked="true"
                            android:textSize="@dimen/text_15"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:onClick="onClickedRadioButton"
                            android:padding="@dimen/dimen_10" />
                        <View
                            android:id="@+id/viewStripIcon"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/dimen_5"
                            android:background="@color/colorBg" />
                        <RadioButton
                            android:id="@+id/rb_soon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50"
                            android:background="@color/colorWhite"
                            android:text="@string/remark_payment_soon"
                            android:textSize="@dimen/text_15"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:layout_marginBottom="@dimen/dimen_5"
                            android:onClick="onClickedRadioButton"
                            android:padding="@dimen/dimen_10" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/dimen_5"
                            android:background="@color/colorBg" />
                        <RadioButton
                            android:id="@+id/rb_gopay"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50"
                            android:background="@color/colorWhite"
                            android:text="@string/bayar_dengan_gopay"
                            android:textSize="@dimen/text_15"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:layout_marginBottom="@dimen/dimen_5"
                            android:onClick="onClickedRadioButton"
                            android:padding="@dimen/dimen_10" />
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_save"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/colorRed"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_save"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remark_items_button"
            android:textAllCaps="true"
            android:textSize="@dimen/text_16"
            android:textColor="@color/colorWhite"
            style="@style/dialog_red_button"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>