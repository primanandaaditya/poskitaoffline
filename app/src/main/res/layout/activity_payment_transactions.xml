<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/colorRed">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:src="@drawable/ic_baseline_arrow_back_24px"
            android:layout_marginStart="@dimen/dimen_10"
            android:tint="@color/colorWhite"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            tools:ignore="contentDescription"/>

        <TextView
            android:id="@+id/tv_nav_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_16"
            android:layout_marginStart="@dimen/dimen_10"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/remark_payment_header"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_content"
        android:layout_below="@+id/rl_toolbar"
        android:layout_above="@+id/rl_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittext_border_black">
                <RelativeLayout
                    android:id="@+id/rl_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/colorRed">
                    <TextView
                        android:id="@+id/tv_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_centerVertical="true"
                        android:text="@string/remark_payment_total"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_total"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/colorWhite"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_payment_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/text_24"
                        android:visibility="gone"
                        android:text="@string/remark_payment_currency"/>
                    <TextView
                        android:id="@+id/tv_payment_total"
                        android:layout_toEndOf="@+id/tv_payment_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/text_24"
                         />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_payment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/colorRed">
                    <TextView
                        android:id="@+id/tv_remark_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_centerVertical="true"
                        android:text="@string/remark_payment_nomine"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_payment"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:padding="@dimen/dimen_5"
                        android:textColor="@color/colorGreyText_2"
                        android:hint="@string/remark_payment_entry"
                        android:inputType="number"
                        android:textSize="@dimen/text_11"
                        android:imeOptions="actionDone"
                        android:gravity="center"
                        android:background="@drawable/edittext_bg_underline"
                        android:textColorHint="@color/grey"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_payment_change"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/colorRed">
                    <TextView
                        android:id="@+id/tv_remark_payment_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_centerVertical="true"
                        android:text="@string/remark_payment_change_amount"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_change"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:padding="@dimen/dimen_5"
                        android:textColor="@color/colorGreyText_2"
                        android:hint="@string/remark_payment_change"
                        android:inputType="number"
                        android:textSize="@dimen/text_11"
                        android:gravity="center"
                        android:enabled="false"
                        android:background="@drawable/edittext_border"
                        android:textColorHint="@color/grey"
                        />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_save"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/colorRed"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_save"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remark_items_button"
            android:textAllCaps="true"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/colorWhite"
            style="@style/dialog_red_button"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>